<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.0 Transitional//EN">

<HTML>
	<HEAD>
		<TITLE>Stanford Dinner</TITLE>
	</HEAD>
 
	<BODY>
		<h1>Dine<h1>
		<h2>Which Dining Hall is the best today?</h2>
			<% @halls.each do |hall| %>
				<div class="col-sm-4">
    			<div class"panel">
  				  <div class="btn-group-vertical" id="<%= hall.id %>">
							<button type="button" class="btn btn-success plus-button" role="button">+</button>
  						<button type="button" class="btn btn-danger minus-button" role="button">-</button>
						</div>
						<img src="<%= hall.img %>">
						<%= hall.score %>
					</div>
				 </div>
			<% end %>
		</div>
	</BODY>
</HTML>